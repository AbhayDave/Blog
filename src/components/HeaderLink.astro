---
const { href, class: className, ...props } = Astro.props;
console.log("href:", href);
console.log("url pathname:", Astro.url.pathname);
console.log(href === Astro.url.pathname);
console.log();
let isActive =
  href.replace(/\/$/, "") === Astro.url.pathname.replace(/\/$/, "");
---

<a
  href={href}
  class:list={[className, isActive ? "active" : "inactive"]}
  {...props}
>
  <slot />
</a>

<style>
  a {
    display: inline-block;
    text-decoration: none;
  }
  a.active {
    font-weight: bolder;
    text-decoration: underline;
    text-decoration-thickness: 0.3ex;
    text-underline-offset: 0.3ex;
  }

  .inactive {
    text-decoration: none;
  }
</style>
