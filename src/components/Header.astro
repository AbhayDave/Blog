<style>
  h2 {
    margin: 0.5em 0;
  }

  .img-frame {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 10px 0;
    border-radius: 50%;
    overflow: hidden;
  }

  .img-frame img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
</style>
